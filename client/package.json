{
	"name": "gs-topaz",
	"description": "Language server for GemStone Topaz",
	"author": "Marc Andr√© Freiheit",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "marcfreiheit",
	"repository": {
		"type": "git",
		"url": "https://github.com/marcfreiheit/gs-topaz-ls"
	},
	"engines": {
		"vscode": "^1.20.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:topaz"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [
            {
                "id": "topaz",
                "aliases": [
                    "GemStone topaz 2",
                    "Topaz",
                    "topaz"
                ],
                "extensions": [".tpz"],
                "configuration": "../language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "topaz",
                "scopeName": "source.topaz",
                "path": "../syntaxes/topaz.tmLanguage.json",
                "embeddedLanguages": {
                    "source.smalltalk": "smalltalk",
                    "source.shell": "shellscript"
                }
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"vscode": "^1.1.6",
		"vscode-languageclient": "^3.5.0"
	},
	"devDependencies": {
		"typescript": "^2.6.1",
		"tslint": "^5.8.0",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42",
		"decache": "^4.4.0",
		"istanbul": "^0.4.5",
		"remap-istanbul": "^0.10.1"
	}
}
